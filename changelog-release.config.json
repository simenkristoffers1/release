{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "bootstrap-sha": "a8a7001fad22ee3f7a84d04e25f4c435c7298050",
    "include-component-in-tag": true,
    "tag-separator": "@",
    "pull-request-title-pattern": "chore(changelog): 📄 weekly update",
    "pull-request-header": "📢 Automated weekly changelog update.",
    "packages": {
        ".": {
            "release-type": "simple"
        }
    },
    "changelog-sections": [
        {
            "type": "feat",
            "section": "🚀 Features"
        },
        {
            "type": "fix",
            "section": "🐞 Bug Fixes"
        },
        {
            "type": "perf",
            "section": "⚡ Performance Improvements"
        },
        {
            "type": "deps",
            "section": "⬆️ Dependencies"
        },
        {
            "type": "docs",
            "section": "📝 Documentation"
        },
        {
            "type": "style",
            "section": "🎨 Code Style"
        },
        {
            "type": "refactor",
            "section": "🔨 Refactoring"
        },
        {
            "type": "test",
            "section": "🧪 Tests"
        },
        {
            "type": "build",
            "section": "🏗 Build System"
        },
        {
            "type": "ci",
            "section": "🤖 Continuous Integration"
        },
        {
            "type": "chore",
            "section": "🧹 Chores"
        },
        {
            "type": "revert",
            "section": "⏪ Reverts"
        }
    ]
}